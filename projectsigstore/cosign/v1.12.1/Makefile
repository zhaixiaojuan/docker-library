# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=projectsigstore
REPOSITORY	?=cosign
TAG		?=v1.12.1
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

SOURCE_URL=https://github.com/sigstore/cosign.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
PATCH=0001-port-to-loong64.patch

default: image


src/$(SOURCE):
	git clone -b $(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && \
                git apply ../../$(PATCH) && \
		wget https://github.com/Loongson-Cloud-Community/ko/releases/download/v0.15.2/ko && chmod +x ko

image: src/$(SOURCE)
	make -C src/$(SOURCE) ko-local

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
