# This file is generated by the template.

REGISTRY?=lcr.loongnix.cn
ORGANIZATION?=calico
REPOSITORY?=go-build
TAG?=v0.85
LATEST?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(patsubst v%,%,$(TAG))
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

SOURCE_URL=https://github.com/projectcalico/go-build.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
PATCH=0001-add-loong64-support-abi-2.0.patch

default: image

src/$(SOURCE):
	git clone -q -b $(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && \
		git apply ../../$(PATCH)

image: src/$(SOURCE)
	make -C src/$(SOURCE) image ARCHIMAGE=$(IMAGE) BUILDARCH=loong64 \
		DOCKER_BUILD_ARGS="--build-arg HTTPS_PROXY=$(https_proxy) --build-arg HTTP_PROXY=$(http_proxy) --build-arg CGO_ENABLED=1 --build-arg GOPROXY=https://goproxy.cn"

push:
	docker push $(IMAGE)
	@if [ $(LATEST) = "true" ]; \
		then\
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
