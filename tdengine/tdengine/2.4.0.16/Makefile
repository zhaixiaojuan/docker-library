# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=tdengine
REPOSITORY	?=tdengine
TAG		?=2.4.0.16
LATEST		?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/Loongson-Cloud-Community/TDengine.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')

default: image

src/$(SOURCE):
	git clone -q -b loongarch_64-ver-$(TAG) --depth=1 $(SOURCE_URL) $@

image: src/$(SOURCE)
	make -C $</packaging/docker image -f Makefile.docker

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
